<div class="span8">
  <div class="hero-unit">
    <h1>Hello, world!</h1>
    <p>Welcome to my blog. You can many thing about ruby on rails in here</p>
  </div>
</div>
<div class="span8">
  <% @posts.each do |post| %>
    <h2><%= post.title   %></h2>

    <div class="row">
      <div class="span3"><small><em>Category</em> <span class="label"><%= post.post_category.name  %></span></small></div>
      <div class="span3 pull-right"><small><em>Posted by </em> <%= post.user.name %></small></div>
    </div>
    <p><%= if controller.action_name == 'search'
        highlight(post.description.html_safe,@word)
      else
        sanitize truncate(strip_tags(post.description), length:300)
      end
    %></p>
    <p><%= link_to "Detail Â»", detail_post_path(post), :class => "btn"   %></p>
    <hr />
  <% end %>
  <%= paginate @posts if controller.action_name == 'index' %>
</div>


