<div class="span3 offset2 thumbnail">
  <div style="padding: 10px 10px 10px 10px">
  <% if notice  %>
    <div class="alert fade in">
      <p><%= notice %></p>
    </div>
  <% end   %>


  <%= form_for @contacts, :url => send_contact_path, :html => { :class => 'form-vertical' } do |f| %>
  <% if @contacts.errors.any?   %>
    <div class="alert alert-error">
      <button type="button" class="close" data-dismiss="alert">Ã—</button>
      <ul>
        <% @contacts.errors.full_messages.each do |msg|  %>
          <li><%= msg %></li>
        <% end   %>
      </ul>
    </div>
  <% end %>
    <div class="control-group">
      <%= f.label :name, :class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :name, :size => 50, :placeholder => 'Your name..', :class => 'text_field' %>
      </div>
    </div>
    <div class="control-group">
      <%= f.label :email, :class => 'control-label' %>
      <div class="controls">
        <%= f.email_field :email, :placeholder => 'you@gmail.com', :class => 'email_field' %>
      </div>
    </div>
    <div class="control-group">
      <%= f.label :message, :class => 'control-label' %>
      <div class="controls">
        <%= f.text_area :message, :class => 'text_area', :placeholder => 'Your message', :size=> "31x10" %>
      </div>
    </div>


    <%= f.submit 'send', :class => 'btn btn-primary' %>
    <%= f.submit "reset", :type => "reset", :class => 'btn'  %>
  <% end %>
  </div>
</div>